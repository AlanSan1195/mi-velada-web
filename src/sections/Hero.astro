---
import HeroLogo from "@/components/HeroLogo.astro";
---

<!-- // aprendimos a a darle un efecto de luz a un svg metiendo los dos elementos en un div posisionandolos absolutamente en el div relativo y a cada svg le damos su color y al de abajo el blur -->
<section class="flex flex-col place-items-center gap-4 lg:gap-9">
  <h2
    class="font atomic text-primary -rotate-12 text-4xl md:text-5xl font-Atomic rotate md:mb-4 mb-10 mt-10 md:mb-20 lg:mb-20 "
  >
    <a href="https://www.twitch.tv/ibai" target="_blank " rel="noopener" class=" hover:cursor-pointer hover:scale-125 transition inline-block   ">twitch.tv/ibai</a>
  </h2>
  <div class="relative scale-150 md:scale-125 ">
    <img
      class="absolute inset-0 -z-10 m-auto block h-auto w-full max-w-[400px] scale-[135%] md:scale-[175%] "
      src="/imagenes/drawn-x-logo.webp"
      alt="Logo dibujado a amano de la Velada IV"
    />
    <div
      class="absolute inset-0 -z-10 m-auto w-full rounded-full bg-black opacity-70 blur-2xl md:size-[400px]"
    >
    </div>

    <HeroLogo class="h-auto w-[200px] text-primary md:w-[500px]" />
    <HeroLogo
      class="absolute inset-0 -z-10 h-auto w-[200px] text-[#f1ffaa]/70 blur md:w-[500px]"
    />
  </div>
</section>
